
{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<h2>Editar tarefa</h2>
<div class="card">
    <div class="card-body">
        <form method="post" action="/notes/edit/" >
            <label for="name"></label>
            <input type="hidden" name="id" value="{{note._id}}">
            <input class="form-control" type="text" name="title" id="title"  placeholder="{{note.title}}" >

            <label for="slug"></label>
            <textarea class="form-control" type="text" id="description" name="description"  placeholder="{{note.description}}"></textarea>
            <br>
            <button class="btn btn-success">Enviar</button>


        </form>
    </div>
</div>